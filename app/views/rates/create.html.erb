<div class="container">
<h3> How your bill compares: </h3>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Hospital Charge</th>
      <th>Medicare Facility Rate</th>
      <th>Medicare Non-Facility Rate</th>
      <th>The Difference</th>
    </tr>
  </thead>
  <% @arrays.each do |array| %> 
    <tbody>
      <tr>
        <td><%= array[0].code %></td>
        <td><%= number_to_currency(array[1]) %></td>
        <td><%= number_to_currency(array[2].facility_fee)%></td>
        <td><%= number_to_currency(array[2].non_facility_fee)%></td>
        <td><%= number_to_currency((array[1].to_i - array[2].facility_fee))%></td>
      </tr>
    </tbody>
  <%end%>
</table>

