<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"> 
</head>

<div class="card" style="width: 50rem;">
  <i class="fa fa-user-md card-img-top" style="font-size:200px;color:#5bc0de"></i>
  <div class="card-block">
    <h1 class="card-title"> <%=@user.first_name%> <%=@user.last_name%>, <%=@user.credential%> </h1>
    <p class="card-text"> <%=@user.specialty%> </p>
    <p class="card-text"> Phone: <%=number_to_phone(@user.phone)%> </p>
    <p class="card-text"> <%=@user.address_1%> <%=@user.address_2%> </p>
    <p class="card-text"> <%=@user.city%>, <%=@user.state%> <%=@zipcode%> </p>
    <% if current_user %>
      <a class="btn btn-primary" href="/users/<%=@user.id%>/edit">Edit Account </a>
      <%= form_tag "/users/#{@user.id}", method: :delete do %>
      <input class="btn btn-danger" type="submit" value="Delete Account">
       <% end %>
    <%end%>
  </div>
</div>

 

 
