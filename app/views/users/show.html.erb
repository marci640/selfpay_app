

<br> 
<div class="provider_form_container">
  <div class="card" style="width: 30rem;">
    <i class="fa fa-user-md card-img-top" style="font-size:200px;color:#8CA8AE"></i>
    <div class="card-block">
      <h4 class="card-title"> <%=@user.first_name%> <%=@user.last_name%>, <%=@user.credential%> </h4>
      <p class="card-text"> Specialty: <%=@user.specialty%> </p>
      <p class="card-text"> Phone: <%=number_to_phone(@user.phone)%> </p>
      <p class="card-text"> Address: <%=@user.address_1%> <%=@user.address_2%> </p>
      <p class="card-text"> City: <%=@user.city%>, <%=@user.state%> <%=@zipcode%> </p>
      <p class="card-text"> Account currently active? <%=@user.active%> </p>
      <% if current_user %>
        <a class="btn btn-info" href="/users/<%=@user.id%>/edit">Edit Account </a>
        <%= form_tag "/users/#{@user.id}", method: :delete do %>
        <br>
        <input class="btn btn-dark" type="submit" value="Delete Account">
         <% end %>
      <%end%>
    </div>
  </div>
</div>

 

 
