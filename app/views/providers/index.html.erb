<div id="app">
  
  <div class="row">
    <div v-for="provider in providers">
      <div class="col-sm-6">
        <div class="card">
          <i class="fa fa-user-md" style="font-size:64px;color:#5bc0de"></i>
          <h4> {{ provider.first_name }} {{ provider.last_name }}, {{ provider.credential }} </h4>
          <p class="profile-title"> Specialty: {{ provider.specialty }} <br>
              {{ provider.address_1 }} {{ provider.address_2 }} <br>
              {{ provider.city }}, {{ provider.state }} {{ provider.zipcode }} <br>
              {{ provider.phone }}
          </p>
        </div>
        <br>
      </div>
    </div>
  </div>




<div class="card-deck">
  <div v-for="provider in providers">
    <div class="card">
      <i class="fa fa-user-md" style="font-size:64px;color:#5bc0de"></i>
      <div class="card-block">
        <h4 class="card-title"> {{ provider.first_name }} {{ provider.last_name }}, {{ provider.credential }} </h4>
        <p class="card-text"> Specialty: {{ provider.specialty }} </p>
      </div>
    </div>
</div>

</div>




<!-- Profile Cards -->

<div class="row">
  <% @providers.each do |provider| %>
    <div class="col-sm-6">
      <div class="card">
        <i class="fa fa-user-md" style="font-size:64px;color:#5bc0de"></i>
        <h4> <%=provider.first_name%> <%=provider.last_name%>, <%=provider.credential%> </h4>
        <p class="profile-title"> Specialty: <%=provider.specialty%> <br>
            <%=provider.address_1%> <%=provider.address_2%> <br>
            <%=provider.city%>, <%=provider.state%> <%=provider.zipcode%> <br>
            <%=number_to_phone(provider.phone)%> 
        </p>
      </div>
      <br>
    </div>
  <%end%>
</div>

